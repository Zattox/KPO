{
  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "orders-swagger-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/proxy/orders/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      },
      "payments-swagger-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/proxy/payments/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "orders": { "Address": "http://orders-service:80/" }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "payments": { "Address": "http://payments-service:80/" }
        }
      }
    }
  }
}
